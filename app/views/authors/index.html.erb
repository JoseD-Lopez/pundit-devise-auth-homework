<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.age %></td>
        <td><%= author.bio %></td>
        <td><%= link_to 'Show', author if policy(Author).show?%></td>
        <td><%= link_to 'Edit', edit_author_path(author) if policy(Author).edit?%></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } if policy(Author).destroy?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(Author).new? %>
<%= link_to 'New Author', new_author_path %>
<% end %>
